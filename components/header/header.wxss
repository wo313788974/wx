/* components/header/header.wxss */
.main {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0 15rpx;
  background: #fff;
}
.logo_wrap {
  flex: 2;
}
.user_wrap {
  display: flex;
  justify-content: center;
  flex: 1;
}
.search {
  display: flex;
  align-items: center;
  flex: 4;
  position: relative;
}
.search icon {
  position: absolute;
  right: 15rpx;
}
.search input {
  background:#eee;
  border-radius: 25rpx;
  padding-left: 20rpx;
  font-size: 26rpx;
  color: #666;
}
.download_wrap {
  flex: 2;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  background: #e06f93;
  padding: 10rpx;
  color: #fff;
  border-radius: 10rpx;
}