/**index.wxss**/

.nav_wrap {
  padding: 10rpx;
}
.nav {
  white-space: nowrap;
  padding: 5rpx 0;
}
.nav_item {
  display: inline-block;
  padding: 0 25rpx;
}
.active {
  border-bottom: 5rpx solid #fb7299;
}

.swiper_item {
  height: 220rpx;
}
.swiper_item image {
  width: 100%;
}

.video_wrap {
  display: flex;
  padding: 10rpx;
  flex-wrap: wrap;
  justify-content: space-between;
}
.video_item {
  width: 48%;
  margin-bottom: 20rpx;
}
.video_image {
  position: relative;
}
.video_info {
  position: absolute;
  bottom: 10rpx;
  font-size: 24rpx;
  color: #fff;
  background:rgba(0,0,0,0.5);
  left: 0;
  width: 100%;
  display: flex;
  padding: 5rpx 0;
  justify-content: space-around;
}
.video_image image {
  width: 100%;
}
.image_desc {
  font-size: 28rpx;
  display: -webkit-box;
  overflow: hidden;
  white-space: normal;
  text-overflow: ellipsis;
  word-wrap: break-word;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
